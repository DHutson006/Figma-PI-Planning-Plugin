{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./",
    "rootDir": "./src",
    "types": ["@figma/widget-typings"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

